<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movie"
            type="com.ralphevmanzano.themoviedb.data.models.MinimizedMovie"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.details.MovieDetailsFragment">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{String.valueOf(movie.id)}" />

        <ImageView
            android:id="@+id/img_movie"
            android:layout_width="300px"
            android:layout_height="450px"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:transitionName="@{movie.posterPath}"
            app:sharedElement="@{movie.posterPath}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv"
            tools:ignore="ContentDescription,PxUsage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>